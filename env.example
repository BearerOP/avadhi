# Database Configuration
# ====================
# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/avadhi?schema=public"

# JWT Configuration
# =================
# Secret key for JWT token signing (generate a strong random string)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Server Configuration
# ====================
# Port for the API server (optional, defaults to 3000)
PORT=3000

# Node Environment
# ================
# Set to 'production' for production deployment
NODE_ENV=development

# Optional: Database Pool Settings (for PostgreSQL)
# ================================================
# DATABASE_POOL_SIZE=10
# DATABASE_CONNECTION_TIMEOUT=30

# Optional: SSL Settings (for production databases)
# ================================================
# DATABASE_SSL_MODE=require
# DATABASE_SSL_CA_PATH="/path/to/ca-certificate.crt"

# Example local development setup:
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/avadhi?schema=public"
# JWT_SECRET="dev-secret-key-change-in-production"
# PORT=3000
# NODE_ENV=development 