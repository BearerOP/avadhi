# Database Configuration
# ====================
# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/avadhi?schema=public"

# JWT Configuration
# =================
# Secret key for JWT token signing (generate a strong random string)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Server Configuration
# ====================
# Port for the API server (optional, defaults to 3000)
PORT=3000

# Node Environment
# ================
# Set to 'production' for production deployment
NODE_ENV=development

# OAuth Configuration (Google & GitHub)
# =====================================
# Google OAuth credentials (get from Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth credentials (get from GitHub Developer Settings)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# NextAuth Configuration (for frontend authentication)
# ===================================================
NEXTAUTH_SECRET="your-nextauth-secret-key-change-this-in-production"
NEXTAUTH_URL="http://localhost:3001"  # Your frontend URL

# API Base URL (for OAuth redirects)
# ==================================
API_BASE_URL="http://localhost:8000"  # Your API server URL

# Frontend API Configuration
# ===========================
NEXT_PUBLIC_API_BASE_URL="http://localhost:8000"  # API URL accessible from browser

# Session Configuration (for API OAuth state management)
# ======================================================
SESSION_SECRET="your-session-secret-key-change-this-in-production"

# Optional: Database Pool Settings (for PostgreSQL)
# ================================================
# DATABASE_POOL_SIZE=10
# DATABASE_CONNECTION_TIMEOUT=30

# Optional: SSL Settings (for production databases)
# ================================================
# DATABASE_SSL_MODE=require
# DATABASE_SSL_CA_PATH="/path/to/ca-certificate.crt"

# Example local development setup:
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/avadhi?schema=public"
# JWT_SECRET="dev-secret-key-change-in-production"
# PORT=3000
# NODE_ENV=development 