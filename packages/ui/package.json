{
  "name": "@repo/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./styles.css": "./dist/index.css",
    "./card": "./dist/card.js",
    "./gradient": "./dist/gradient.js",
    "./turborepo-logo": "./dist/turborepo-logo.js",
    "./button": "./dist/button.js",
    "./badge": "./dist/badge.js",
    "./input": "./dist/input.js",
    "./label": "./dist/label.js",
    "./scroll-area": "./dist/scroll-area.js",
    "./select": "./dist/select.js",
    "./separator": "./dist/separator.js",
    "./tabs": "./dist/tabs.js",
    "./toast": "./dist/toast.js",
    "./prog-blur": "./dist/prog-blur.js",
    "./lib/utils": "./dist/lib/utils.js"
  },
  "license": "MIT",
  "scripts": {
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "build:components": "tsc",
    "build": "bun run build:styles && bun run build:components",
    "dev": "bun run dev:styles & bun run dev:components",
    "clean": "rm -rf dist",
    "check-types": "tsc --noEmit",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "lint": "eslint src --max-warnings 0"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "dependencies": {
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-tabs": "^1.1.12",
    "@repo/tailwind-config": "*",
    "class-variance-authority": "^0.7.1",
    "radix-icons": "^1.0.0",
    "radix-ui": "^1.4.2",
    "sonner": "^2.0.6"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@tailwindcss/cli": "^4.1.5",
    "@types/react": "^19.1.0",
    "eslint": "^9.29.0",
    "tailwindcss": "^4.1.5",
    "typescript": "5.8.2"
  }
}
