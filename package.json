{
  "name": "with-tailwind",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=api",
    "dev:web": "turbo run dev --filter=web",
    "dev:docs": "turbo run dev --filter=docs",
    "start": "turbo run build && turbo run start",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "cd packages/store && npx prisma generate",
    "db:migrate": "cd packages/store && npx prisma migrate dev",
    "db:studio": "cd packages/store && npx prisma studio",
    "db:seed": "cd packages/store && npx tsx prisma/seed.ts",
    "clean": "turbo run clean && rm -rf node_modules",
    "install:all": "bun install"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@emnapi/core": "^1.4.5",
    "@tybys/wasm-util": "^0.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.535.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.6"
  }
}
